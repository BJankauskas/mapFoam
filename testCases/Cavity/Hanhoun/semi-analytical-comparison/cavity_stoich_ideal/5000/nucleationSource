FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "5000";
    object      nucleationSource;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 -1 0 0 0 0];

internalField   uniform 2.58131e+09;

boundaryField
{
    fixedWalls
    {
        type            calculated;
        value           uniform 0;
    }
    frontAndBack
    {
        type            empty;
    }
    movingWall
    {
        type            calculated;
        value           uniform 0;
    }
}


